<%- include('parts/head',{title:'TLINK'}); %>
	<link rel="stylesheet" href="/css/index.css">
	<form action="/busca" method="get">
		<input type="text" name="q" placeholder="Busca" autocomplete="off" value="<%= busca %>">
		<button type="submit">Buscar</button>
	</form>

	<% if(pizzas.length > 0) { %>
	<main>
		<% for(let produto of produtos){ %>
		<article>
			<img src="<%= produto.img %>" alt="<%= produto.nome %>">
			<a href="/produtos/<%= produto.id %>">Ver Mais</a>
			<button>+ Add</button>
			<div><%= produto.nome %></div>
			<span><%= produto.preco.toLocaleString('pt-br', { minimumFractionDigits: 2 , style: 'currency', currency: 'BRL' }) %></span>
		</article>
		<% } %>
	</main>
	<%} else { %>
		<div class="produto-nao-encontrado">Nenhum produto encontrado</div>
	<% } %>
	<%- include('parts/foot'); %>